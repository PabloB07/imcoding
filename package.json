{
  "name": "imcodinglive",
  "version": "1.0.0",
  "description": "Portfolio personal con Tailwind CSS y SASS",
  "main": "index.js",
  "scripts": {
    "dev": "npm-run-all --parallel watch:sass watch:tailwind",
    "watch:sass": "node-sass sass/main.scss css/style.css -w",
    "watch:tailwind": "tailwindcss -i css/style.css -o css/style.tailwind.css --watch",
    "build:sass": "node-sass sass/main.scss css/style.css",
    "build:tailwind": "tailwindcss -i css/style.css -o css/style.tailwind.css --minify",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.tailwind.css -o css/style.final.css",
    "build": "npm-run-all build:sass build:tailwind prefix:css"
  },
  "author": "Pablo Blanco",
  "license": "GPL-3.0",
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "node-sass": "^9.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "tailwindcss": "^3.3.5"
  },
  "dependencies": {
    "aos": "^2.3.4",
    "typed.js": "^2.1.0"
  }
}
